  "output_formats": {
    "eph_binary": {
      "description": "Оптимизированный бинарный формат .eph для PHP",
      "extension": ".eph",
      "advantages": [
        "Быстрый fseek доступ",
        "Минимальный размер (5-7× сжатие от SPICE)",
        "Pure PHP без зависимостей",
        "Прямой unpack doubles"
      ]
    },

    "sqlite": {
      "description": "SQLite база данных с индексами",
      "extension": ".db",
      "advantages": [
        "SQL запросы",
        "Индексы по времени и телу",
        "Поддержка BLOB для коэффициентов",
        "Работает с любым языком"
      ]
    },

    "hdf5": {
      "description": "HDF5 научный формат",
      "extension": ".h5",
      "advantages": [
        "Научный стандарт",
        "Встроенное сжатие",
        "Многомерные массивы",
        "Поддержка Python/C/Fortran"
      ]
    },

    "json": {
      "description": "JSON текстовый формат (для малых датасетов)",
      "extension": ".json",
      "advantages": [
        "Человекочитаемый",
        "Универсальный парсинг",
        "Отладка и инспекция"
      ],
      "disadvantages": [
        "Большой размер",
        "Медленный парсинг"
      ]
    }
